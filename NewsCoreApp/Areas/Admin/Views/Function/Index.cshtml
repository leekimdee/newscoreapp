@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    <script src="~/app/controllers/function/index.js"></script>
    <script>
        var _function = new functionController();
        _function.initialize();
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Chức năng
        <small>Danh sách</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Danh sách chức năng</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Tất cả chức năng</h3>
                    <div class="box-tools">
                        @*<div class="input-group input-group-sm hidden-xs">
                            </div>*@
                        <button id="btnCreate" class="btn btn-default"><i class="fa fa-plus"></i>Thêm mới</button>
                    </div>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered" id="tbl-list">
                        <thead>
                            <tr>
                                <th style="width: 100px">#</th>
                                <th>Mã chức năng</th>
                                <th>Tên chức năng</th>
                                <th>Đường dẫn</th>
                                <th>Cấp cha</th>
                                <th>Icon css</th>
                                <th>Thứ tự</th>
                                <th style="width: 100px">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <!--Pagination-->
                <div id="pagingSection" class="box-footer">

                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <th scope="row">
            <button class="btn btn-default btn-sm btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-sm btn-delete" data-id="{{Id}}"><i class="fa fa-trash"></i></button>
        </th>
        <td>{{Id}}</td>
        <td>{{Name}}</td>
        <td>{{Url}}</td>
        <td>{{ParentId}}</td>
        <td>{{IconCss}}</td>
        <td>{{SortOrder}}</td>
        <td>{{{Status}}}</td>
    </tr>
</script>
